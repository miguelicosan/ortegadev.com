---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getTranslations } from "../../i18n/config";
import WhatsAppButton from "../../components/WhatsAppButton.astro";

const lang = "en";
const t = await getTranslations(lang);

const title = `${t.blog.title} | ortegadev.com`;
const description =
    "Articles about web development, AI, Big Data and technology. Tips and experiences from a Full Stack Developer.";

// Blog Schema - Ready for when you publish articles
const blogSchema = {
    "@context": "https://schema.org",
    "@type": "Blog",
    "name": "ortegadev Blog",
    "description": description,
    "url": "https://ortegadev.com/en/blog",
    "author": {
        "@type": "Person",
        "name": "Miguel Ángel Ortega Ibáñez",
        "url": "https://ortegadev.com"
    },
    "inLanguage": "en",
    "blogPost": [
        // When you publish articles, add them here:
        // {
        //     "@type": "BlogPosting",
        //     "headline": "Article title",
        //     "description": "Brief description",
        //     "url": "https://ortegadev.com/en/blog/article-title",
        //     "datePublished": "2025-01-15",
        //     "dateModified": "2025-01-15",
        //     "author": {
        //         "@type": "Person",
        //         "name": "Miguel Ángel Ortega Ibáñez"
        //     },
        //     "image": "https://ortegadev.com/images/blog/article.jpg"
        // }
    ]
};
---

<BaseLayout title={title} description={description} lang={lang}>
    <section class="blog-page py-12">
        <div class="container">
            <h1>{t.blog.title}</h1>
            <p
                class="text-center text-lg"
                style="margin-bottom: 3rem; color: #6e6e73;"
            >
                Coming soon: articles about Astro, AI, web development and more.
            </p>
            <p class="text-center">
                <a href="/en" class="btn btn-primary"> Back to home </a>
            </p>
        </div>
    </section>
    <WhatsAppButton lang={lang} />
</BaseLayout>

<style lang="scss">
    @import "../../styles/tokens.scss";

    .blog-page {
        min-height: 60vh;

        h1 {
            text-align: center;
            margin-bottom: $spacing-6;

            @media (min-width: $breakpoint-md) and (max-width: 1199px) {
                font-size: 2.25rem;
                margin-bottom: $spacing-4;
            }
        }
    }
</style>

<script type="application/ld+json" set:html={JSON.stringify(blogSchema)} />

