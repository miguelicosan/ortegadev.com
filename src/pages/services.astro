---
import BaseLayout from "../layouts/BaseLayout.astro";
import { getTranslations } from "../i18n/config";

const lang = "es";
const t = await getTranslations(lang);

const title = `${t.services.title} | ortegadev.com`;
const description =
    "Servicios de desarrollo web, IA, automatización, DevOps y backend escalable. Soluciones tecnológicas profesionales para empresas.";

const services = [
    {
        id: "web",
        title: t.services.web.title,
        description: t.services.web.description,
        tech: t.services.web.tech,
        icon: "code",
        modal: t.services.web.modal,
    },
    {
        id: "ai",
        title: t.services.ai.title,
        description: t.services.ai.description,
        tech: t.services.ai.tech,
        icon: "brain",
        modal: t.services.ai.modal,
    },
    {
        id: "consulting",
        title: t.services.consulting.title,
        description: t.services.consulting.description,
        tech: t.services.consulting.tech,
        icon: "chart",
        modal: t.services.consulting.modal,
    },
    {
        id: "devops",
        title: t.services.devops.title,
        description: t.services.devops.description,
        tech: t.services.devops.tech,
        icon: "server",
        modal: t.services.devops.modal,
    },
    {
        id: "backend",
        title: t.services.backend.title,
        description: t.services.backend.description,
        tech: t.services.backend.tech,
        icon: "database",
        modal: t.services.backend.modal,
    },
    {
        id: "uxui",
        title: t.services.uxui.title,
        description: t.services.uxui.description,
        tech: t.services.uxui.tech,
        icon: "palette",
        modal: t.services.uxui.modal,
    },
];

// ItemList Schema for services
const servicesSchema = {
    "@context": "https://schema.org",
    "@type": "ItemList",
    "name": "Servicios de Desarrollo Web",
    "description": description,
    "itemListElement": services.map((service, index) => ({
        "@type": "Service",
        "position": index + 1,
        "name": service.title,
        "description": service.description,
        "provider": {
            "@type": "Person",
            "name": "Miguel Ángel Ortega Ibáñez",
            "url": "https://ortegadev.com"
        },
        "areaServed": "ES",
        "serviceType": "Technology Services"
    }))
};
---

<BaseLayout title={title} description={description} lang={lang}>
    <section class="services-page py-12">
        <div class="container">
            <div class="services-header scroll-reveal delay-100">
                <h1>{t.services.title}</h1>
                <p class="subtitle">{t.services.subtitle}</p>
            </div>

            <div class="services-grid scroll-reveal delay-200">
                {
                    services.map((service) => (
                        <div class="service-card card" data-service={service.id}>
                            <div class="service-icon">
                                {service.icon === "code" && (
                                    <svg width="48" height="48" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                        <path d="M16 18L22 12L16 6M8 6L2 12L8 18" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                    </svg>
                                )}
                                {service.icon === "brain" && (
                                    <svg width="48" height="48" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                        <circle cx="12" cy="12" r="3" stroke="currentColor" stroke-width="2" />
                                        <path d="M12 1V4M12 20V23M4.22 4.22L6.34 6.34M17.66 17.66L19.78 19.78M1 12H4M20 12H23M4.22 19.78L6.34 17.66M17.66 6.34L19.78 4.22" stroke="currentColor" stroke-width="2" stroke-linecap="round" />
                                    </svg>
                                )}
                                {service.icon === "chart" && (
                                    <svg width="48" height="48" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                        <path d="M3 3V21H21" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                        <path d="M18 9L13 14L9 10L3 16" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                    </svg>
                                )}
                                {service.icon === "server" && (
                                    <svg width="48" height="48" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                        <rect x="2" y="3" width="20" height="6" rx="1" stroke="currentColor" stroke-width="2" />
                                        <rect x="2" y="12" width="20" height="6" rx="1" stroke="currentColor" stroke-width="2" />
                                        <circle cx="6" cy="6" r="1" fill="currentColor" />
                                        <circle cx="6" cy="15" r="1" fill="currentColor" />
                                    </svg>
                                )}
                                {service.icon === "database" && (
                                    <svg width="48" height="48" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                        <ellipse cx="12" cy="4" rx="8" ry="2" stroke="currentColor" stroke-width="2" />
                                        <path d="M4 4V18C4 19.1 7.6 20 12 20C16.4 20 20 19.1 20 18V4" stroke="currentColor" stroke-width="2" />
                                        <ellipse cx="12" cy="18" rx="8" ry="2" stroke="currentColor" stroke-width="2" />
                                    </svg>
                                )}
                                {service.icon === "palette" && (
                                    <svg width="48" height="48" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                        <path d="M12 2C6.49 2 2 6.49 2 12s4.49 10 10 10c1.38 0 2.5-1.12 2.5-2.5 0-.61-.23-1.21-.64-1.67-.08-.09-.13-.21-.13-.33 0-.28.22-.5.5-.5H16c3.31 0 6-2.69 6-6 0-4.96-4.49-9-10-9z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                        <circle cx="7" cy="10" r="1.5" fill="currentColor" />
                                        <circle cx="10" cy="7" r="1.5" fill="currentColor" />
                                        <circle cx="14" cy="7" r="1.5" fill="currentColor" />
                                        <circle cx="17" cy="10" r="1.5" fill="currentColor" />
                                    </svg>
                                )}
                            </div>
                            
                            <div class="service-content">
                                <h3>{service.title}</h3>
                                <p class="description">{service.description}</p>
                                <p class="tech-label">
                                    <strong>Tecnologías:</strong> {service.tech}
                                </p>
                                <button class="btn-details" data-service={service.id}>
                                    Ver más detalles
                                </button>
                            </div>
                        </div>
                    ))
                }
            </div>

            <!-- Modals -->
            {
                services.map((service) => (
                    <div class="service-modal" data-modal={service.id} id={`modal-${service.id}`}>
                        <div class="modal-backdrop"></div>
                        <div class="modal-content">
                            <button class="modal-close" data-close={service.id}>✕</button>
                            
                            <div class="modal-header">
                                <h2>{service.modal.subtitle}</h2>
                                <p class="modal-intro">{service.modal.intro}</p>
                            </div>

                            <div class="modal-body">
                                <h3>Lo que conseguirás:</h3>
                                <ul class="benefits-list">
                                    {service.modal.benefits.map((benefit: string) => (
                                        <li>
                                            <span class="benefit-icon">✓</span>
                                            {benefit}
                                        </li>
                                    ))}
                                </ul>
                            </div>

                            <div class="modal-footer">
                                <a href="/contact" class="btn btn-primary btn-lg">
                                    {service.modal.cta}
                                </a>
                            </div>
                        </div>
                    </div>
                ))
            }

            <!-- CTA Section -->
            <section class="cta-card scroll-reveal delay-300">
                <h2>Transformemos tu visión en realidad tecnológica</h2>
                <p class="cta-subtitle">Ya sea que necesites una web moderna, automatización con IA u optimización de infraestructura, tengo la experiencia para entregar resultados.</p>
                <a href="/contact" class="btn btn-primary btn-lg">
                    Agenda tu consultoría gratuita
                </a>
            </section>
        </div>
    </section>
</BaseLayout>

<style lang="scss">
    @import "../styles/tokens.scss";

    .services-page {
        min-height: 60vh;
    }

    .services-header {
        text-align: center;
        margin-bottom: $spacing-12;

        @media (min-width: $breakpoint-md) and (max-width: 1199px) {
            margin-bottom: $spacing-8;
        }

        h1 {
            margin-bottom: $spacing-4;
            font-size: 2.25rem;
            background: $gradient-hero;
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;

            @media (min-width: $breakpoint-md) and (max-width: 1199px) {
                font-size: 2.25rem;
                margin-bottom: $spacing-3;
            }
        }

        .subtitle {
            font-size: $font-size-xl;
            color: $color-text-secondary;
            max-width: 600px;
            margin: 0 auto;

            @media (min-width: $breakpoint-md) and (max-width: 1199px) {
                font-size: $font-size-lg;
            }
        }
    }

    .services-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: $spacing-6;
        margin-bottom: $spacing-12;

        @media (min-width: 768px) and (max-width: 1023px) {
            grid-template-columns: repeat(2, 1fr);
            gap: $spacing-5;
            margin-bottom: $spacing-8;
            justify-items: center;
            
            > * {
                max-width: 400px;
            }
        }

        @media (min-width: 1024px) and (max-width: 1199px) {
            grid-template-columns: repeat(3, 1fr);
            gap: $spacing-5;
            margin-bottom: $spacing-8;
            justify-items: center;
        }

        @media (min-width: $breakpoint-md) {
            grid-template-columns: repeat(2, 1fr);
        }

        @media (min-width: 1200px) {
            grid-template-columns: repeat(3, 1fr);
            justify-items: center;
            
            > * {
                max-width: 360px;
            }
        }

        @media (min-width: 1300px) {
            > * {
                width: 380px;
                max-width: none;
            }
        }
    }

    .service-card {
        position: relative;
        transition: all $transition-base ease-out;
        cursor: pointer;
        display: flex;
        flex-direction: column;
        width: 100%;

        &:hover {
            transform: translateY(-4px);
            box-shadow: 0 12px 24px rgba($color-brand-primary, 0.15);
        }

        .service-icon {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 80px;
            height: 80px;
            margin: 0 auto $spacing-4;
            background: linear-gradient(135deg, $color-brand-primary, $color-brand-secondary);
            border-radius: $radius-lg;
            color: white;

            @media (min-width: $breakpoint-md) and (max-width: 1199px) {
                width: 60px;
                height: 60px;
                margin-bottom: $spacing-3;
            }

            svg {
                width: 48px;
                height: 48px;

                @media (min-width: $breakpoint-md) and (max-width: 1199px) {
                    width: 32px;
                    height: 32px;
                }
            }
        }

        .service-content {
            display: flex;
            flex-direction: column;
            flex: 1;

            h3 {
                margin-bottom: $spacing-3;
                font-size: $font-size-lg;

                @media (min-width: $breakpoint-md) and (max-width: 1199px) {
                    font-size: $font-size-base;
                    margin-bottom: $spacing-2;
                }
            }

            .description {
                margin-bottom: $spacing-4;
                line-height: $line-height-relaxed;
                color: $color-text-secondary;
                flex: 1;

                @media (min-width: $breakpoint-md) and (max-width: 1199px) {
                    font-size: $font-size-sm;
                    margin-bottom: $spacing-3;
                }
            }

            .tech-label {
                font-size: $font-size-sm;
                color: $color-text-secondary;
                margin-bottom: $spacing-4;

                @media (min-width: $breakpoint-md) and (max-width: 1199px) {
                    font-size: $font-size-xs;
                    margin-bottom: $spacing-3;
                }
            }

            .btn-details {
                background: transparent;
                border: 2px solid $color-brand-primary;
                color: $color-brand-primary;
                padding: $spacing-3 $spacing-4;
                border-radius: $radius-lg;
                font-weight: $font-weight-medium;
                cursor: pointer;
                transition: all $transition-base ease-out;
                font-size: $font-size-sm;
                align-self: flex-start;

                &:hover {
                    background: $color-brand-primary;
                    color: white;
                    transform: translateY(-2px);
                }
            }
        }
    }

    .service-modal {
        display: none;
        position: fixed;
        inset: 0;
        z-index: 10000;
        animation: modal-appear 0.15s ease-out;

        &.active {
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .modal-backdrop {
            position: absolute;
            inset: 0;
            background: rgba(0, 0, 0, 0.5);
            backdrop-filter: blur(4px);
            cursor: pointer;
        }

        .modal-content {
            position: relative;
            background: var(--color-bg-primary);
            border-radius: $radius-lg;
            max-width: 700px;
            width: 90%;
            max-height: 90vh;
            overflow-y: auto;
            padding: $spacing-8;
            box-shadow: 0 25px 50px rgba(0, 0, 0, 0.3);

            @media (min-width: $breakpoint-md) and (max-width: 1199px) {
                max-width: 600px;
                padding: $spacing-6;
            }

            @media (max-width: $breakpoint-md) {
                padding: $spacing-6;
            }
        }

        .modal-close {
            position: absolute;
            top: $spacing-4;
            right: $spacing-4;
            background: transparent;
            border: none;
            font-size: $font-size-2xl;
            cursor: pointer;
            color: $color-text-secondary;
            transition: all $transition-base ease-out;

            &:hover {
                color: $color-text-primary;
                transform: rotate(90deg);
            }
        }

        .modal-header {
            margin-bottom: $spacing-8;

            h2 {
                font-size: $font-size-3xl;
                margin-bottom: $spacing-3;
                background: $gradient-hero;
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
                background-clip: text;
            }

            .modal-intro {
                font-size: $font-size-lg;
                color: $color-brand-primary;
                font-weight: $font-weight-medium;
                line-height: $line-height-relaxed;
            }
        }

        .modal-body {
            margin-bottom: $spacing-8;

            h3 {
                margin-bottom: $spacing-4;
                font-size: $font-size-xl;
            }

            .benefits-list {
                list-style: none;
                padding: 0;
                margin: 0;

                li {
                    display: flex;
                    gap: $spacing-3;
                    padding: $spacing-3 0;
                    border-bottom: 1px solid rgba($color-brand-primary, 0.1);
                    font-size: $font-size-base;
                    line-height: $line-height-relaxed;
                    color: $color-text-secondary;

                    &:last-child {
                        border-bottom: none;
                    }

                    .benefit-icon {
                        flex-shrink: 0;
                        color: $color-brand-primary;
                        font-weight: $font-weight-bold;
                        font-size: $font-size-lg;
                    }
                }
            }
        }

        .modal-footer {
            text-align: center;

            .btn {
                display: inline-block;
            }
        }
    }

    .cta-card {
        margin-top: $spacing-12;
        background: linear-gradient(135deg, rgba($color-brand-primary, 0.1) 0%, rgba($color-brand-secondary, 0.1) 100%);
        padding: $spacing-10;
        border-radius: $radius-xl;
        border: 1px solid rgba($color-brand-primary, 0.2);
        text-align: center;
        max-width: 800px;
        margin-left: auto;
        margin-right: auto;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.05);
        color: var(--color-text-primary);

        @media (max-width: 767px) {
            padding: 2rem !important;
        }

        @media (min-width: $breakpoint-md) and (max-width: 1199px) {
            margin-top: $spacing-8;
            padding: $spacing-6;
        }

        h2 {
            font-size: $font-size-3xl;
            margin-bottom: $spacing-4;
            color: var(--color-text-primary);

            @media (max-width: $breakpoint-md) {
                font-size: $font-size-2xl;
            }
        }

        .cta-subtitle {
            font-size: $font-size-lg;
            color: var(--color-text-secondary);
            margin-bottom: $spacing-8;

            @media (max-width: $breakpoint-md) {
                font-size: $font-size-base;
            }
        }

        .btn {
            display: inline-block;
        }
    }

    @keyframes modal-appear {
        from {
            opacity: 0;
        }
        to {
            opacity: 1;
        }
    }

    .service-modal.active .modal-content {
        animation: modal-content-appear 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
    }

    @keyframes modal-content-appear {
        from {
            transform: scale(0.9) translateY(-20px);
        }
        to {
            transform: scale(1) translateY(0);
        }
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const buttons = document.querySelectorAll('.btn-details');
        const modals = document.querySelectorAll('.service-modal');

        buttons.forEach(button => {
            button.addEventListener('click', (e) => {
                e.preventDefault();
                const serviceId = button.getAttribute('data-service');
                const modal = document.getElementById(`modal-${serviceId}`);
                if (modal) {
                    modal.classList.add('active');
                    document.body.style.overflow = 'hidden';
                }
            });
        });

        modals.forEach(modal => {
            const closeBtn = modal.querySelector('.modal-close');
            const backdrop = modal.querySelector('.modal-backdrop');

            closeBtn?.addEventListener('click', () => {
                modal.classList.remove('active');
                document.body.style.overflow = '';
            });

            backdrop?.addEventListener('click', () => {
                modal.classList.remove('active');
                document.body.style.overflow = '';
            });
        });

        // Cerrar con ESC
        document.addEventListener('keydown', (e) => {
            if (e.key === 'Escape') {
                modals.forEach(modal => {
                    modal.classList.remove('active');
                    document.body.style.overflow = '';
                });
            }
        });
    });
</script>

<script type="application/ld+json" set:html={JSON.stringify(servicesSchema)} />

