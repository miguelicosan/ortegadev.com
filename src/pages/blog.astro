---
import BaseLayout from "../layouts/BaseLayout.astro";
import { getTranslations } from "../i18n/config";

const lang = "es";
const t = await getTranslations(lang);

const title = `${t.blog.title} | ortegadev.com`;
const description =
    "Artículos sobre desarrollo web, IA, Big Data y tecnología. Consejos y experiencias de un Full Stack Developer.";

// Blog Schema - Preparado para cuando publiques artículos
const blogSchema = {
    "@context": "https://schema.org",
    "@type": "Blog",
    "name": "Blog de ortegadev",
    "description": description,
    "url": "https://ortegadev.com/blog",
    "author": {
        "@type": "Person",
        "name": "Miguel Ángel Ortega Ibáñez",
        "url": "https://ortegadev.com"
    },
    "inLanguage": "es",
    "blogPost": [
        // Cuando publiques artículos, añádelos aquí:
        // {
        //     "@type": "BlogPosting",
        //     "headline": "Título del artículo",
        //     "description": "Descripción breve",
        //     "url": "https://ortegadev.com/blog/titulo-articulo",
        //     "datePublished": "2025-01-15",
        //     "dateModified": "2025-01-15",
        //     "author": {
        //         "@type": "Person",
        //         "name": "Miguel Ángel Ortega Ibáñez"
        //     },
        //     "image": "https://ortegadev.com/images/blog/articulo.jpg"
        // }
    ]
};
---

<BaseLayout title={title} description={description} lang={lang}>
    <section class="blog-page py-12">
        <div class="container">
            <h1>{t.blog.title}</h1>
            <p
                class="text-center text-lg"
                style="margin-bottom: 3rem; color: #6e6e73;"
            >
                Próximamente: artículos sobre Astro, IA, desarrollo web y más.
            </p>
            <p class="text-center">
                <a href="/" class="btn btn-primary"> Volver al inicio </a>
            </p>
        </div>
    </section>
</BaseLayout>

<style lang="scss">
    @import "../styles/tokens.scss";

    .blog-page {
        min-height: 60vh;

        h1 {
            text-align: center;
            margin-bottom: $spacing-6;

            @media (min-width: $breakpoint-md) and (max-width: 1199px) {
                font-size: 2.25rem;
                margin-bottom: $spacing-4;
            }
        }
    }
</style>

<script type="application/ld+json" set:html={JSON.stringify(blogSchema)} />

