---
import { type Language } from "../i18n/config";

interface Props {
    lang: Language;
}

const { lang } = Astro.props;
const message =
    lang === "es"
        ? "Hola%20Miguel%2C%20he%20visto%20tu%20web%20y%20me%20gustaría%20hablar%20contigo."
        : "Hi%20Miguel%2C%20I%20saw%20your%20website%20and%20I%20would%20like%20to%20talk%20to%20you.";
const whatsappUrl = `https://wa.me/message/3O565QQ2YC35O1`;
const label = lang === "es" ? "WhatsApp" : "WhatsApp chat";
---

<a
    href={whatsappUrl}
    class="whatsapp-button"
    target="_blank"
    rel="noopener"
    aria-label={label}
    title={label}
>
    <svg
        viewBox="0 0 24 24"
        fill="currentColor"
        xmlns="http://www.w3.org/2000/svg"
    >
        <path
            d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.511-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L0 24l6.304-1.654a11.882 11.882 0 005.713 1.456h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"
        ></path>
    </svg>
</a>

<style lang="scss">
    @import "../styles/tokens.scss";

    .whatsapp-button {
        position: fixed;
        bottom: $spacing-6;
        right: $spacing-6;
        z-index: $z-index-fixed;
        width: 60px;
        height: 60px;
        background-color: #25d366;
        border-radius: $radius-full;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: $shadow-lg;
        transition: all $transition-base ease-out;
        animation: fadeIn 0.5s ease-out 1s both;

        &:hover {
            transform: scale(1.1);
            box-shadow: $shadow-2xl;
            background-color: darken(#25d366, 5%);
        }

        // Cuando el banner de cookies está visible, levantar el botón
        :global(.cookie-banner-open) & {
            bottom: calc($spacing-6 + 120px);

            @media (max-width: $breakpoint-sm) {
                bottom: calc($spacing-4 + 140px);
            }
        }

        svg {
            width: 32px;
            height: 32px;
            color: white;
        }

        @media (max-width: $breakpoint-sm) {
            width: 50px;
            height: 50px;
            bottom: $spacing-4;
            right: $spacing-4;

            svg {
                width: 28px;
                height: 28px;
            }
        }
    }
</style>
