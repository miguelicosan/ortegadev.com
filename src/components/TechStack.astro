---
import { getTranslations, type Language } from "../i18n/config";

interface Props {
    lang: Language;
}

const { lang } = Astro.props;
const t = await getTranslations(lang);

const techStack = {
    frontend: [
        "HTML5",
        "CSS3",
        "SASS",
        "JavaScript (ES6+)",
        "React",
        "Svelte",
        "Astro",
        "Tailwind CSS",
    ],
    backend: [
        "Python",
        "Flask",
        "FastAPI",
        "Node.js",
        "PostgreSQL",
        "MongoDB",
        "Supabase",
        "Redis",
        "Elasticsearch",
    ],
    devops: [
        "Docker",
        "Docker Compose",
        "Docker Swarm",
        "AWS EC2",
        "NGINX",
        "Shell Scripting",
        "Kafka",
        "Apache Spark",
    ],
    visualization: ["InfluxDB", "Grafana", "Kibana", "Node-RED", "MQTT"],
    ai: [
        "Deep Learning",
        "CNN",
        "Transfer Learning",
        "NLP",
        "Sentiment Analysis",
        "OpenAI",
        "Gemini API",
    ],
};
---

<section class="tech-stack py-12" id="tech-stack" data-parallax="techstack">
    <div class="container">
        <div class="tech-header scroll-reveal">
            <h2>{t.techStack.title}</h2>
        </div>

        <div class="carousel-wrapper">
            <button class="carousel-button carousel-button-prev" aria-label="Previous category">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M15 18L9 12L15 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
            </button>

            <div class="tech-categories">
                <div class="tech-category scroll-reveal">
                    <h3>
                        <svg
                            width="24"
                            height="24"
                            viewBox="0 0 24 24"
                            fill="none"
                            xmlns="http://www.w3.org/2000/svg"
                        >
                            <rect
                                x="3"
                                y="3"
                                width="18"
                                height="18"
                                rx="2"
                                stroke="currentColor"
                                stroke-width="2"></rect>
                            <path
                                d="M9 9L12 12L15 9"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"></path>
                        </svg>
                        {t.techStack.frontend}
                    </h3>
                    <div class="tech-chips">
                        {
                            techStack.frontend.map((tech) => (
                                <span class="chip">{tech}</span>
                            ))
                        }
                    </div>
                </div>

                <div class="tech-category scroll-reveal delay-100">
                    <h3>
                        <svg
                            width="24"
                            height="24"
                            viewBox="0 0 24 24"
                            fill="none"
                            xmlns="http://www.w3.org/2000/svg"
                        >
                            <path
                                d="M12 2L2 7L12 12L22 7L12 2Z"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"
                                stroke-linejoin="round"></path>
                            <path
                                d="M2 17L12 22L22 17"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"
                                stroke-linejoin="round"></path>
                            <path
                                d="M2 12L12 17L22 12"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"
                                stroke-linejoin="round"></path>
                        </svg>
                        {t.techStack.backend}
                    </h3>
                    <div class="tech-chips">
                        {
                            techStack.backend.map((tech) => (
                                <span class="chip">{tech}</span>
                            ))
                        }
                    </div>
                </div>

                <div class="tech-category scroll-reveal delay-200">
                    <h3>
                        <svg
                            width="24"
                            height="24"
                            viewBox="0 0 24 24"
                            fill="none"
                            xmlns="http://www.w3.org/2000/svg"
                        >
                            <path
                                d="M3 9L12 2L21 9V20C21 20.5304 20.7893 21.0391 20.4142 21.4142C20.0391 21.7893 19.5304 22 19 22H5C4.46957 22 3.96086 21.7893 3.58579 21.4142C3.21071 21.0391 3 20.5304 3 20V9Z"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"
                                stroke-linejoin="round"></path>
                            <path
                                d="M9 22V12H15V22"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"
                                stroke-linejoin="round"></path>
                        </svg>
                        {t.techStack.devops}
                    </h3>
                    <div class="tech-chips">
                        {
                            techStack.devops.map((tech) => (
                                <span class="chip">{tech}</span>
                            ))
                        }
                    </div>
                </div>

                <div class="tech-category scroll-reveal delay-300">
                    <h3>
                        <svg
                            width="24"
                            height="24"
                            viewBox="0 0 24 24"
                            fill="none"
                            xmlns="http://www.w3.org/2000/svg"
                        >
                            <path
                                d="M3 3V21H21"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"
                                stroke-linejoin="round"></path>
                            <path
                                d="M18 9L13 14L9 10L3 16"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"
                                stroke-linejoin="round"></path>
                        </svg>
                        {t.techStack.visualization}
                    </h3>
                    <div class="tech-chips">
                        {
                            techStack.visualization.map((tech) => (
                                <span class="chip">{tech}</span>
                            ))
                        }
                    </div>
                </div>

                <div class="tech-category scroll-reveal delay-400">
                    <h3>
                        <svg
                            width="24"
                            height="24"
                            viewBox="0 0 24 24"
                            fill="none"
                            xmlns="http://www.w3.org/2000/svg"
                        >
                            <circle
                                cx="12"
                                cy="12"
                                r="3"
                                stroke="currentColor"
                                stroke-width="2"></circle>
                            <path
                                d="M12 1V4M12 20V23M4.22 4.22L6.34 6.34M17.66 17.66L19.78 19.78M1 12H4M20 12H23M4.22 19.78L6.34 17.66M17.66 6.34L19.78 4.22"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"></path>
                        </svg>
                        {t.techStack.ai}
                    </h3>
                    <div class="tech-chips">
                        {
                            techStack.ai.map((tech) => (
                                <span class="chip">{tech}</span>
                            ))
                        }
                    </div>
                </div>
            </div>

            <button class="carousel-button carousel-button-next" aria-label="Next category">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M9 18L15 12L9 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
            </button>
        </div>
    </div>
</section>

<style lang="scss">
    @import "../styles/tokens.scss";

    .tech-stack {
        background-color: var(--color-bg-secondary);
        perspective: 1200px;
    }

    .tech-header {
        text-align: center;
        margin-bottom: $spacing-10;

        h2 {
            font-size: $font-size-4xl;
            font-weight: $font-weight-bold;
            color: var(--color-text-primary);

            @media (min-width: $breakpoint-md) {
                font-size: $font-size-5xl;
            }
        }
    }

    .carousel-wrapper {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: $spacing-6;
        position: relative;

        @media (max-width: $breakpoint-md) {
            gap: $spacing-3;
        }
    }

    .tech-categories {
        perspective: 1200px;
        width: 100%;
        max-width: 1200px;
        height: 400px;
        display: grid;
        grid-template-columns: repeat(5, 1fr);
        gap: $spacing-6;
        align-items: center;
        justify-items: center;
        position: relative;
        overflow: hidden;
        padding: 0 $spacing-4;

        @media (max-width: $breakpoint-lg) {
            height: auto;
            gap: $spacing-4;
            padding: 0 $spacing-2;
            margin-bottom: $spacing-4;
            grid-template-columns: repeat(2, 1fr);
        }

        @media (max-width: $breakpoint-md) {
            grid-template-columns: 1fr;
            gap: $spacing-4;
            padding: 0 $spacing-2;
        }
    }

    .tech-category {
        position: absolute;
        background-color: var(--color-bg-primary);
        border-radius: $radius-lg;
        padding: $spacing-6;
        box-shadow: $shadow-base;
        width: 280px;
        min-height: 340px;
        display: flex;
        flex-direction: column;
        transform-style: preserve-3d;
        transition: all 0.4s cubic-bezier(0.4, 0.0, 0.2, 1);
        cursor: pointer;
        opacity: 0;
        transform: translateX(500px) scale(0.8);
        pointer-events: none;

        @media (max-width: $breakpoint-lg) {
            position: relative;
            width: 100%;
            max-width: none;
            min-height: auto;
            padding: $spacing-4;
            margin: 0;
            opacity: 1 !important;
            transform: none !important;
            pointer-events: auto;
            transition: all $transition-slow ease-out;
            display: flex !important;
        }

        &.prev {
            opacity: 0.6;
            transform: translateX(-320px) scale(0.85);
            z-index: 5;
        }

        &.active {
            opacity: 1;
            transform: translateX(0) scale(1);
            z-index: 10;
            pointer-events: auto;

            &:hover {
                box-shadow: $shadow-lg;
            }
        }

        &.next {
            opacity: 0.6;
            transform: translateX(320px) scale(0.85);
            z-index: 5;
        }

        &.revealed {
            @media (max-width: $breakpoint-lg) {
                opacity: 1 !important;
                transform: none !important;
            }
        }

        h3 {
            display: flex;
            align-items: center;
            gap: $spacing-3;
            font-size: $font-size-lg;
            font-weight: $font-weight-semibold;
            color: $color-brand-primary;
            margin: 0 0 $spacing-4 0;
            height: 32px;
            flex-shrink: 0;

            @media (max-width: $breakpoint-lg) {
                font-size: $font-size-base;
                height: auto;
            }

            svg {
                width: 24px;
                height: 24px;
                flex-shrink: 0;

                @media (max-width: $breakpoint-lg) {
                    width: 20px;
                    height: 20px;
                }
            }
        }
    }

    .carousel-button {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 48px;
        height: 48px;
        border-radius: $radius-full;
        border: 2px solid var(--color-text-secondary);
        background-color: transparent;
        color: var(--color-text-secondary);
        cursor: pointer;
        transition: all $transition-base ease-out;
        flex-shrink: 0;

        @media (max-width: $breakpoint-lg) {
            display: none;
        }

        &:hover {
            border-color: $color-brand-primary;
            color: $color-brand-primary;
            transform: scale(1.1);
        }

        &:active {
            transform: scale(0.95);
        }

        svg {
            width: 24px;
            height: 24px;
        }
    }

    .tech-chips {
        display: flex;
        flex-wrap: wrap;
        gap: $spacing-2;

        @media (max-width: $breakpoint-lg) {
            gap: $spacing-1;
        }
    }

    .chip {
        display: inline-block;
        padding: $spacing-2 $spacing-3;
        font-size: $font-size-sm;
        font-weight: $font-weight-medium;
        font-family: $font-family-mono;
        color: var(--color-logo-dev);
        background-color: rgba(100, 100, 100, 0.1);
        border: 1px solid var(--color-logo-dev);
        border-radius: $radius-full;
        transition: all $transition-base ease-out;

        @media (max-width: $breakpoint-lg) {
            padding: $spacing-1 $spacing-2;
            font-size: $font-size-xs;
        }

        &:hover {
            background-color: var(--color-logo-dev);
            color: #000;
            transform: translateY(-2px);
            border-color: var(--color-logo-dev);
        }
    }
</style>
